<div class="govuk-summary-list__row">
  <dt class="govuk-summary-list__key">
    <%= key %>
  </dt>
  <dd class="govuk-summary-list__value" style="white-space: pre-wrap"><%= value %></dd>
  <dd class="govuk-summary-list__actions">
    <%= link_to step_path(step), class: 'govuk-link', title: "Change #{key.downcase}" do %>
      Change<span class="govuk-visually-hidden"> <%= key.downcase %></span>
    <% end %>
  </dd>
</div>