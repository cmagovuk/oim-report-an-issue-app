<% title(t('.page_title')) %>
<%= render partial: 'back_link' %>

<%= form_for @issue, url: report_issue_step_path(params[:id]), :as => :issue do |f| %>
  <%= f.govuk_error_summary %>
  <%= f.govuk_collection_radio_buttons :reporting_as, 
     ReportIssue::ReportingAs::REPORTING_AS_OPTIONS, ->(option) {option}, nil, legend: {size: "l", tag: 'h1'} %>
  <%= f.govuk_text_field :reporting_other %>
  <%= f.govuk_submit %>
<% end %>